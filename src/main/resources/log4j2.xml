<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

  <Appenders>
    <File name="FILE" fileName="./app.log" >
      <JSONLayout compact="true" eventEol="true" properties="true" stacktraceAsString="true" />
    </File>
  </Appenders>

  <Loggers>
    <Root level="INFO">
      <AppenderRef ref="FILE"/>
    </Root>
  </Loggers>
</Configuration>